# ===========================================
# SAIF Monorepo Environment Variables
# ===========================================
# Copy this file to .env.local and fill in your values

# Supabase Configuration (shared across all apps)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Liveblocks (CRM app only)
NEXT_PUBLIC_LIVEBLOCKS_PUBLIC_KEY=your-liveblocks-key

# Webhook Authentication (CRM app only)
WEBHOOK_SECRET=your-webhook-secret-here

# Twilio SMS Notifications (CRM app only - optional)
# Get credentials from https://console.twilio.com
TWILIO_ACCOUNT_SID=your-account-sid
TWILIO_AUTH_TOKEN=your-auth-token
# Phone number for sending SMS (toll-free recommended)
TWILIO_PHONE_NUMBER=+1234567890
# Verify Service SID for phone verification (create at console.twilio.com/verify/services)
TWILIO_VERIFY_SERVICE_SID=VAxxxxx

# Anthropic API (CRM app only - for reports and news classification)
ANTHROPIC_API_KEY=your-anthropic-api-key

# Vercel Cron Secret (CRM app only - for scheduled jobs)
CRON_SECRET=your-cron-secret-here

# NewsAPI (CRM app only - for AI news feature)
# Get free API key from https://newsapi.org/account
NEWSAPI_KEY=your-newsapi-key-here

# Cross-app Navigation URLs
# CRM app: URL to the Community app (SAIF Community)
NEXT_PUBLIC_FOUNDER_APP_URL=http://localhost:3002
# Community app: URL to the Partner app (CRM)
NEXT_PUBLIC_CRM_APP_URL=http://localhost:3001
